server {
    listen 80 default_server;

    root /var/www/html/public;
    index index.php;

    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$ {
        fastcgi_pass   ${APP_HOST}:9000;
        fastcgi_index  index.php;
        include        fastcgi.conf;
    }
}
